{
  "presets": [
    [
      "@babel/preset-env",
      {
        "modules": false
      }
    ],
    "@babel/preset-react",
    "@babel/preset-typescript"
  ],
  "plugins": [
    ["react-hot-loader/babel"],
    [
        "module-resolver",
        {
          "root": ["./src"],
          "alias": {
            "components": "./src/components",
            "datum": "./src/datum"
          }
        }
      ]
  ]
}