{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "outDir": "build",
    "baseUrl": "src",
    "lib": [
      "dom",
      "esnext"
    ],
    "paths": {
      "components/*": ["components/*"],
      "datum/*": ["datum/*"],
      "styles/*": ["styles/*"]
    }
  },
  "exclude": [
    "node_modules"
  ]
}